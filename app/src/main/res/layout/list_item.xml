<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/price"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="450.00"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/sign_in"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer name"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
     >
<TextView
    android:id="@+id/hair_textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="shave Hair"
    android:textSize="16sp"
    android:textColor="#000"
    android:textStyle="bold"
    />
    <TextView
        android:id="@+id/beard_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="shave Beard"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/pigment_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hair Pigment"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/musk_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Face Musk"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/time_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/date_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00/00/00"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>